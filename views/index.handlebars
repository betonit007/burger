<div class="wrap">
    <div class="container1">

        <h2>Choose a Burger</h2>

        
            {{#each burgers}}
            {{#unless devoured}}
            <p>
            {{this.id}}. 

            <button data-id="{{this.id}}" class="delBurger" name="{{this.burger_name}}">{{this.burger_name}}</button>
            </p>
            {{/unless}}
            {{/each}}
        

    </div>
    

    <div class="container2">

        <h2>Eaten Burgers</h2>

        
            {{#each burgers}}
            {{#if devoured}}
            <p>
            {{this.id}}. 

            <button data-id="{{this.id}}" class="delBurger" name="{{this.burger_name}}">{{this.burger_name}}</button>
            </p>
            {{/if}}
            {{/each}}
        
    </div>


    <div class="container3">
        <div id="pic">
            <img src="/assets/img/center.png">
         </div>
        <h2>Make a Burger!</h2>
          
        <form class="create-form">

            <div class="form-group">
                <label for="ba">Burger Name:</label>
                <input type="text" id="burg" name="name">
            </div>
            
            <button type="submit">Add Burger</button>
            
        </form>
    </div>
</div>